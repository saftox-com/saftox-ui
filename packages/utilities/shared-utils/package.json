{
	"name": "@saftox-ui/shared-utils",
	"author": "Serhii Zaitsev <ceo@saftox.com>",
	"version": "0.0.1",
	"description": "A set of SaftoxUI utilities",
	"keywords": ["shared-utils"],
	"main": "./src/index.ts",
	"sideEffects": false,
	"files": ["dist"],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saftox-com/saftox-ui.git",
		"directory": "packages/utilities/shared-utils"
	},
	"bugs": {
		"url": "https://github.com/saftox-com/saftox-ui/issues"
	},
	"scripts": {
		"build": "tsup src --dts",
		"build:fast": "tsup src",
		"dev": "pnpm build:fast --watch",
		"dev:vite": "vite serve dev",
		"clean": "rimraf dist .turbo",
		"typecheck": "tsc --noEmit",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"peerDependencies": {
		"solid-js": ">=1.8.17"
	},
	"dependencies": {
		"@solid-primitives/utils": "^6.2.3"
	},
	"clean-package": "../../../configs/clean-package.config.json",
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": ["cjs", "esm"]
	}
}
