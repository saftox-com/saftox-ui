{
	"name": "@saftox-ui/theme",
	"author": "Serhii Zaitsev <ceo@saftox.com>",
	"version": "0.0.1",
	"description": "The default theme SaftoxUI components",
	"keywords": ["theme"],
	"main": "./src/index.ts",
	"sideEffects": false,
	"files": ["dist"],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/saftox-com/saftox-ui.git",
		"directory": "packages/core/theme"
	},
	"bugs": {
		"url": "https://github.com/saftox-com/saftox-ui/issues"
	},
	"scripts": {
		"build": "tsup src --dts",
		"build:fast": "tsup src",
		"dev": "pnpm build:fast --watch",
		"dev:vite": "vite serve dev",
		"clean": "rimraf dist .turbo",
		"typecheck": "tsc --noEmit",
		"prepack": "clean-package",
		"postpack": "clean-package restore"
	},
	"peerDependencies": {
		"@saftox-ui/twind": ">=0.0.1"
	},
	"dependencies": {
		"@saftox-ui/variants": "0.0.1",
		"tailwind-merge": "^2.3.0"
	},
	"clean-package": "../../../configs/clean-package.config.json",
	"tsup": {
		"clean": true,
		"target": "es2019",
		"format": ["cjs", "esm"]
	}
}
