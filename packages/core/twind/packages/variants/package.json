{
  "name": "@saftox-ui/variants",
  "author": "Serhii Zaitsev <ceo@saftox.com>",
  "version": "0.0.1",
  "description": "first-class variant API",
  "keywords": ["variants"],
  "main": "src/index.ts",
  "sideEffects": false,
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saftox-com/saftox-ui.git",
    "directory": "packages/core/twind/variants"
  },
  "bugs": {
    "url": "https://github.com/saftox-com/saftox-ui/issues"
  },
  "scripts": {
    "build": "tsup src --dts",
    "build:fast": "tsup src",
    "dev": "pnpm build:fast --watch",
    "dev:vite": "vite serve dev",
    "clean": "rimraf dist .turbo",
    "typecheck": "tsc --noEmit",
    "prepack": "clean-package",
    "postpack": "clean-package restore"
  },
  "dependencies": {
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@saftox-ui/preset": "^0.0.1"
  },
  "clean-package": "../../../configs/clean-package.config.json",
  "tsup": {
    "clean": true,
    "target": "es2019",
    "format": ["cjs", "esm"]
  }
}
