{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": ["tsconfig.json"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "lib/**", "storybook-static/**"]
		},
		"build:fast": {
			"outputs": ["dist/**"],
			"dependsOn": ["^build:fast"]
		},
		"typecheck": {
			"cache": false,
			"dependsOn": ["^typecheck"]
		},
		"start": {
			"dependsOn": ["^build"],
			"outputs": []
		},
		"test": {
			"dependsOn": ["build"],
			"outputs": []
		},
		"clean": {
			"cache": false,
			"outputs": []
		},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		},
		"sb": {
			"cache": false
		}
	}
}
